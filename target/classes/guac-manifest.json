{
    "guacamoleVersion": "1.5.3",
    "name": "Request Portal",
    "namespace": "request-portal",
    "css": [
        "css/request-portal.css"
    ],
    "html": {
        "patches": [
            {
                "op": "add",
                "path": "body > .app-header .header-content .user-menu",
                "value": "<a href='request.html' class='request-access-menu-item' data-i18n='request.title'>Request Access</a>"
            },
            {
                "op": "add",
                "path": "body > .app-settings .settings-tabs",
                "value": [
                    "<div class='settings-tab' data-tab='request-portal-requests'><a href='admin-requests.html' data-i18n='adminRequests.title'>Manage Requests</a></div>",
                    "<div class='settings-tab' data-tab='request-portal-environments'><a href='admin-environments.html' data-i18n='adminEnvironments.title'>Manage Environments</a></div>"
                ]
            }
        ]
    },
    "translations": [
        "translations/en.json",
        "translations/zh.json"
    ]
}
